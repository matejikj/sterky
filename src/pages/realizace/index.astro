---
import Layout from '../../layouts/Layout.astro';
import PillButton from '../../components/ui/PillButton.astro';
import Section from '../../components/ui/Section.astro';
import SurfacePanel from '../../components/ui/SurfacePanel.astro';
import { realizaceProjects } from '../../data/realizace';

export const prerender = true;
---

<Layout title="Realizace | Galerie projektu" description="Placeholder listing realizaci sterek.">
  <Section>
    <div class="grid gap-[14px]">
      <SurfacePanel tone="glass" class="showroom-light p-[16px] md:p-[20px]">
        <div class="grid gap-[12px] md:grid-cols-[1.1fr_0.9fr] md:items-end">
          <div>
            <p class="eyebrow">Projects / references</p>
            <h1 class="mt-[10px]">Realizace</h1>
            <p class="mt-[14px] max-w-[70ch] text-[16px] leading-[1.7] text-charcoal-900/80">
              Placeholder galerie realizaci. V dalsich taskach pribude semanticka galerie, detail projektu, close-up textury a technicka data o systemu.
            </p>
          </div>
          <div class="md:justify-self-end">
            <PillButton href="/#poptavka" variant="primary">Poptat podobny vysledek</PillButton>
          </div>
        </div>
      </SurfacePanel>

      <div class="grid gap-[14px] sm:grid-cols-2 lg:grid-cols-3">
        {realizaceProjects.map((project, i) => (
          <SurfacePanel as="article" class="showroom-light overflow-hidden p-[12px]">
            <div class="texture-stage aspect-[4/3] rounded-[10px] border border-black/8"></div>
            <div class="mt-[12px] grid gap-[6px]">
              <p class="spec-label">Project {String(i + 1).padStart(2, '0')}</p>
              <h3>{project.title}</h3>
              <p class="text-[14px] leading-[1.55] text-charcoal-900/78">{project.summary}</p>
              <a
                href={`/realizace/${project.slug}/`}
                class="inline-flex min-h-[44px] items-center rounded-[100px] border border-black/10 px-[14px] font-mono text-[12px] tracking-[0.08em] uppercase hover:bg-black/5"
              >
                Detail projektu
              </a>
            </div>
          </SurfacePanel>
        ))}
      </div>
    </div>
  </Section>
</Layout>
